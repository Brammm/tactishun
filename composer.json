{
    "name": "brammm/tactishun",
    "type": "library",
    "description": "A simple PHP 8 command bus implementation",
    "keywords": [
        "command bus"
    ],
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Bram Van der Sype",
            "email": "bram.vandersype@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.2",
        "doctrine/coding-standard": "^13.0",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Brammm\\Tactishun\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brammm\\Tactishun\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
